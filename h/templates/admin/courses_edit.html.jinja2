{% extends "h:templates/layouts/admin.html.jinja2" %}

{% set page_id = 'courses_edit' %}
{% set page_title = 'Edit course' %}

{% block content %}
  {{ form }}
  {% if delete_url %}
    <form method="POST" action="{{ delete_url }}">
      <button class="btn btn--danger js-confirm-submit"
              data-confirm-message="Are you sure you want to delete this course?">Delete</button>
    </form>
  {% endif %}
{% endblock %}
